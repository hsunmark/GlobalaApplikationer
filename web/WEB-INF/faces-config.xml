<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>labelsbundle</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>sv_SE</supported-locale>
        </locale-config>

    </application>

    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <if>#{!recruitmentManager.error}</if>
            <to-view-id>/WEB-INF/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{!recruitmentManager.error}</if>
            <to-view-id>/WEB-INF/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitmentManager.loginSuccess and recruitmentManager.applicant}</if>
            <to-view-id>/welcomeApplicant.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitmentManager.loginSuccess and recruitmentManager.recruit}</if>
            <to-view-id>/welcomeRecruiter.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitmentManager.loginSuccess and recruitmentManager.applicant}</if>
            <to-view-id>/welcomeApplicant.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitmentManager.loginSuccess and recruitmentManager.recruit}</if>
            <to-view-id>/welcomeRecruiter.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>